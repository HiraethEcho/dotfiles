# usefule tools
alias weather="curl 'v2d.wttr.in/Beijing'"
alias hso="hexo clean ; hexo g ; hexo s -o"
alias hs="hexo clean ; hexo g ; hexo s"
alias sg="sudo grub-mkconfig -o /boot/grub/grub.cfg"

# rclone
alias rdpush="rclone sync ~/Documents/ koofr:/kDocuments/  --track-renames --filter-from ~/.config/rclone/filter-list.txt --no-update-dir-modtime --no-update-modtime --transfers 20 -i -L && notify-send 'rclone' 'force push ~/Documents to kDocuments'"
alias rdpull="rclone sync koofr:/kDocuments/ ~/Documents/ --backup-dir ~/conflicts --suffix '_local' --suffix-keep-extension --track-renames  --no-update-dir-modtime --no-update-modtime --filter-from ~/.config/rclone/filter-list.txt --transfers 20 -i -L && notify-send 'rclone' 'download from kDocuments to ~/Documents'"

# pacman and yay
alias syyu="paru -Syyu"
alias tsyyu="sudo timeshift --create --comment 'before syyu' && paru -Syyu && sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias qdtq="pacman -Qdttq | sudo pacman -Rscn -"
alias qei="pacman -Qqe | fzf --preview-window=70%:bottom: --preview 'pacman -Qiil {}' --layout=reverse --bind 'enter:execute(pacman -Qiil {} | less)'"
alias qi="pacman -Qq | fzf --preview-window=70%:bottom: --preview 'pacman -Qiil {}' --layout=reverse --bind 'enter:execute(pacman -Qiil {} | less)'"
alias fpinfo="pacman -Qq | fzf --bind=ctrl-d:preview-down,ctrl-u:preview-up --prompt='package info: ' --preview-window=70%:bottom: --preview 'pacman -Qiil {}'"
alias ftree="realpath * | fzf --bind=ctrl-d:preview-down,ctrl-u:preview-up --prompt='ftree: ' --reverse --preview 'lsd --tree --depth 1 {}'"
alias ptr="pacman -Qq | fzf --bind=ctrl-d:preview-down,ctrl-u:preview-up --prompt='depends on ' --preview-window=70%:bottom: --preview 'pactree -rd2 {}'"
alias pt="pacman -Qq | fzf --bind=ctrl-d:preview-down,ctrl-u:preview-up --prompt='required by ' --preview-window=70%:bottom: --preview 'pactree -d2 {}'"
alias sl="pacman -Slq | fzf --preview 'pacman -Si {}' --layout=reverse --bind 'enter:execute(pacman -Si {} | less)'"

