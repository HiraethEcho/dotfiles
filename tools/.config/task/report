report.minimal.columns=id,description.truncated_count,project,tags
report.minimal.labels=ID,Desc,Projects,Tags
report.minimal.filter=priority.not:L -WAITING -PARENT -COMPLETED -DELETED
report.minimal.sort=project
report.minimal.context=true

report.ls.columns=id,depends,description.truncated_count,tags,project,cal,due.relative
report.ls.labels=ID,Dep,Description,Tags,Project,Cal,Due
report.ls.filter=priority.not:L -WAITING -PARENT -COMPLETED -DELETED
report.ls.sort=project

report.list.columns=id,depends,description.truncated,tags,project,cal,due.relative,recur
report.list.labels=ID,Dep,Description,Tags,Project,Cal,Due,Recurrence
report.list.filter=status:pending
report.list.sort=status+/,priority,project
# report.list.context=false

report.long.columns=id,depends,description,tags,project,cal,due,recur
report.long.labels=ID,Depends,Description,Project,Tags,Cal,Due,Recurrence
report.long.filter=status:pending

report.all.columns=id,depends,description,tags,project,cal,due,recur,wait,scheduled,until,status,mask,uuid.short
report.all.labels=ID,Depends,Description,Tags,Project,Cal,Due,Recurrence,Wait,Scheduled,Until,Status,Mask,UUID
report.all.sort=status+/,project,tags
report.all.filter=
report.all.context=false

report.next.columns=id,depends,description.truncated_count,tags,project,due.relative,urgency
report.next.labels=ID,Dep,Description,Tags,Project,Due,Urgency
report.next.filter=status:pending -WAITING -list
report.next.sort=urgency,due,priority,project

report.ready.filter=+READY priority.not:L -WAITING

