#!/usr/bin/env bash

theme="~/.config/rofi/choose.rasi"

option_u="power       u"
option_k="gparted     k"
option_i="terminal    i"
option_s="snapper     s"
option_b="buku        b"
option_w="website     w"
option_n="newsboat    n"

rofi_cmd() {
  rofi -theme-str "listview {columns: 1; lines: 6;}" \
    -dmenu \
    -kb-select-1 u \
    -kb-select-2 k \
    -kb-select-3 i \
    -kb-select-4 s \
    -kb-select-5 b \
    -kb-select-6 w \
    -kb-select-7 n \
    -markup-rows \
    -theme ${theme}
}

run_rofi() {
  echo -e "$option_u\n$option_k\n$option_i\n$option_s\n$option_b\n$option_w\n$option_n\n" | rofi_cmd
}

chosen="$(run_rofi)"
case ${chosen} in
$option_u)
  rofi_powermenu
  ;;
$option_k)
  gparted
  ;;
$option_i)
  kitty
  ;;
$option_s)
  btrfs-assistant-launcher
  ;;
$option_b)
  rofi_buku
  ;;
$option_w)
  rofi_quicklinks
  ;;
$option_n)
  kitty -e newsboat
  ;;
esac
