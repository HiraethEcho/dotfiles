#!/bin/bash
# daily sync, pull or push
# set -x
# set -u

# set -euo pipefail
# config
CONFLICT_DIR="$HOME/conflicts"
GIT_REPO=(
  "$HOME/Documents/math"
  "$HOME/Code/docs"
  "$HOME/memex"
  "$HOME/Sites/content/"
  "$HOME/.config/nvim"
  "$HOME/dotfiles"
)
# "$HOME/Documents/memex"

RCLONE_PAIR=(
  "$HOME/obsidian/;koofr:/obsidian/"
  "$HOME/Documents/zotero_files/;koofr:/kDocuments/zotero_files/"
  "$HOME/Documents/sorge/;koofr:/kDocuments/sorge/"
  "$HOME/Documents/sorge/;tera:/Documents/sorge/"
  "$HOME/Documents/projects/;koofr:/kDocuments/projects/"
  "$HOME/Documents/projects/;tera:/Documents/projects/"
  "$HOME/.local/share/calendar_zeabur/;koofr:/asset/radicale-hiraeth-collection/"
  # "$HOME/.local/share/calendar_zeabur/;cloudflare:/asset/radicale-hiraeth-collection/"
  "$HOME/Documents/math/;koofr:/kDocuments/math/"
  # "$HOME/Documents/math/;cloudflare:/blog/math/"
  "$HOME/Documents/math/;tera:/Documents/math/"
  "$HOME/Code/docs/;koofr:/docs/"
  # "$HOME/Code/docs/;cloudflare:/blog/docs"
  "$HOME/Code/docs/;tera:/docs/"
  "$HOME/memex/;koofr:/memex/"
  # "$HOME/memex/;cloudflare:/blog/memex"
)
# "$HOME/.local/share/calendar_zeabur/;tera:/asset/radicale-hiraeth-collection/"
# "$HOME/obsidian/;tera:/obsidian/"
# "$HOME/memex/;tera:/memex/"

# "$HOME/Documents/math/;openlist:/cst/math/"
# "$HOME/Documents/projects/;cst:/projects/"
# "$HOME/Documents/zotero_files/;openlist:/cst/zotero_files/"
# "$HOME/Documents/doc/;koofr:/kDocuments/doc/"
# "$HOME/Documents/doc/;tera:/kDocuments/doc/"
# "$HOME/Documents/ucas/;koofr:/kDocuments/ucas/"
# "$HOME/Documents/projects/;koofr:/kDocuments/projects/"
# "$HOME/Documents/lectures/;koofr:/kDocuments/lectures/"
# "$HOME/Documents/talks/;koofr:/kDocuments/talks/"
# "$HOME/Documents/philosophy/;koofr:/kDocuments/philosophy/"
# "$HOME/Documents/doc/;tera:/Documents/doc/"
# "$HOME/Documents/ucas/;tera:/Documents/ucas/"
# "$HOME/Documents/zotero_files/;tera:/Documents/zotero_files/"
# "$HOME/Documents/talks/;tera:/Documents/talks/"
# "$HOME/Documents/projects/;tera:/Documents/projects/"
# "$HOME/Documents/lectures/;tera:/Documents/lectures/"
# "$HOME/Documents/philosophy/;tera:/Documents/philosophy/"
# "$HOME/Documents/obsidian_old/;cloudflare:/blog/"
# "$HOME/Documents/obsidian_old/;koofr:/obsidian_old/"
# "$HOME/Documents/obsidian_old/;tera:/obsidian_old/"

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

# tmp
# BEGIN_PWD="$PWD"
#log
TOTAL_LOG=""
LOG=""

# flag
POWER=""
INTERACTIVE=""

total_log() {
  echo "----"
  echo -e "${YELLOW}LOG:${NC}"
  echo -e "$TOTAL_LOG"
  # notify-send "LOG" "$TOTAL_LOG"
}

show_help() {
  echo -e "${GREEN}使用方法:${NC}"
  echo "  dcna [命令]"
  echo ""
  echo -e "${GREEN}可用命令:${NC}"
  # echo "  gp     拉取所有Git仓库（自动处理未提交内容）并同步Rclone"
  # echo "  gP     推送所有Git仓库（自动处理未提交内容）并同步Rclone"
  # echo "  track    启动ActivityWatch"
  echo "  bak   更新系统并备份（需要sudo）"
  echo "  config   显示当前配置"
  echo "  help     显示帮助信息"
  echo ""
  echo -e "${YELLOW}注意: 所有路径已在脚本内配置，无需手动输入。${NC}"
  echo -e "${YELLOW}      AUTO_STASH=$AUTO_STASH (是否自动stash未提交更改)${NC}"
}

# 显示当前配置
show_config() {
  echo -e "${YELLOW}当前配置:${NC}"
  echo ""
  echo -e "${GREEN}Git 仓库:${NC}"
  for repo in "${GIT_REPO[@]}"; do
    echo "  - $repo"
  done

  echo ""
  echo -e "${GREEN}Rclone 同步任务:${NC}"
  for pair in "${RCLONE_PAIR[@]}"; do
    echo "  - $pair"
  done

  echo ""
  echo -e "${GREEN}其他选项:${NC}"
  echo "  - AUTO_STASH: $AUTO_STASH"
}

check_sudo() {
  if ! sudo -v &>/dev/null; then
    echo -e "${RED}错误: 需要sudo权限${NC}"
    return 1
  fi
}

git_pull_all() {
  LOG="${YELLOW}Git Pull All${NC}\n"
  echo -e "$LOG"
  TOTAL_LOG=$TOTAL_LOG"$LOG"
  for i in "${GIT_REPO[@]}"; do
    cd "$i" || return
    LOG="${YELLOW}处理 Git 仓库: $i${NC}..."
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG"
    git add .
    if [[ -n "$(git status --porcelain)" ]]; then
      echo -e "${YELLOW}Try stash${NC}"
      if git stash; then
        LOG="${RED}STASHED $i ${NC}\n"
        TOTAL_LOG=$TOTAL_LOG"$LOG"
        echo -e "$LOG"
        notify-send -u critical "Stashed Repo" "$i"
      else
        LOG="${RED}✓ 失败${NC}"
        echo -e "$LOG"
        TOTAL_LOG=$TOTAL_LOG"$LOG\n"
        notify-send -u critical "stashed failed" "$i"
      fi
    fi
    if git pull; then
      LOG="${GREEN}✓ 拉取成功${NC}\n"
      echo -e "$LOG"
      TOTAL_LOG=$TOTAL_LOG"$LOG"
      notify-send -u normal "Pull" "$i"
    else
      LOG="${RED}✓ 拉取失败${NC}"
      echo -e "$LOG"
      TOTAL_LOG=$TOTAL_LOG"$LOG\n"
      notify-send -u critical "Pull failed" "$i"
    fi
  done
}

git_push_all() {
  LOG="${YELLOW}Git Push All${NC}\n"
  echo -e "$LOG"
  TOTAL_LOG=$TOTAL_LOG"$LOG"
  for i in "${GIT_REPO[@]}"; do
    cd "$i" || return
    LOG="${YELLOW}正在处理 Git 仓库: $i${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG"
    if [[ -n "$(git status --porcelain)" ]]; then
      git add .
      git commit -m "backup at $(date +%y/%m/%d-%T)"
      if git push; then
        LOG="${GREEN}✓ 推送成功${NC}\n"
        echo -e "$LOG"
        TOTAL_LOG=$TOTAL_LOG"$LOG"
        notify-send -u normal "Push" "$i"
      else
        LOG="${RED}✓ 推送失败${NC}\n"
        echo -e "$LOG"
        TOTAL_LOG=$TOTAL_LOG"$LOG"
        notify-send -u normal "Push failed" "$i"
      fi
    else
      LOG="${GREEN}No Change${NC}\n"
      echo -e "$LOG"
      TOTAL_LOG=$TOTAL_LOG"$LOG"
    fi
  done
}

system_bak() {

  if [ -z "$INTERACTIVE" ]; then
    PARU_INTERACTIVE="--noconfirm"
  fi

  LOG="${YELLOW}运行系统更新...${NC}"
  echo -e "$LOG"
  TOTAL_LOG=$TOTAL_LOG"$LOG..."
  if paru -Syyu "$PARU_INTERACTIVE"; then
    LOG="${GREEN}✓ 更新成功${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG\n"
  else
    LOG="${RED}✗ 更新失败${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG\n"
  fi
  LOG="${YELLOW}创建系统备份...${NC}"
  echo -e "$LOG"
  TOTAL_LOG=$TOTAL_LOG"$LOG"
  if sudo timeshift --check; then
    LOG="${GREEN}✓ 备份成功${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG\n"
  else
    LOG="${RED}✗ 备份失败${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG\n"
  fi
  LOG="${YELLOW}更新GRUB配置...${NC}"
  echo -e "$LOG"
  TOTAL_LOG=$TOTAL_LOG"$LOG"
  if sudo grub-mkconfig -o /boot/grub/grub.cfg; then
    LOG="${GREEN}✓ 成功${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG\n"
  else
    LOG="${RED}✗ 失败${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG\n"
  fi
  LOG="${YELLOW}备份package list...${NC}"
  echo -e "$LOG"
  TOTAL_LOG=$TOTAL_LOG"$LOG"
  if pacman -Qqe >"$HOME/Desktop/bak/Qqe-$(whoami).bak" &&
    pacman -Qe >"$HOME/Desktop/bak/Qe-$(whoami).bak"; then
    LOG="${GREEN}✓ 成功${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG\n"
  else
    LOG="${RED}✗ 失败${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG\n"
  fi
}

rclone_pull_all() {
  if [[ -n "$INTERACTIVE" ]]; then
    RCLONE_INTERACTIVE="-i"
  fi

  LOG="${YELLOW}Rclone Pull All${NC}\n"
  echo -e "$LOG"
  TOTAL_LOG=$TOTAL_LOG"$LOG"
  for pair in "${RCLONE_PAIR[@]}"; do
    IFS=";" read -r local remote <<<"$pair"
    LOG="${YELLOW}拉取: $remote → $local${NC}..."
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG"
    # if rclone sync "$remote" "$local" $RCLONE_INTERACTIVE --backup-dir $CONFICT_DIRS --suffix '_local' --track-renames --filter-from "$HOME/.config/rclone/filter-list.txt" --no-update-dir-modtime --no-update-modtime --transfers 20 -L; then
    if rclone sync "$remote" "$local" $RCLONE_INTERACTIVE --track-renames --filter-from "$HOME/.config/rclone/filter-list.txt" --no-update-dir-modtime --no-update-modtime --transfers 20 -L; then
      LOG="${GREEN}✓ 成功${NC}"
      echo -e "$LOG"
      TOTAL_LOG=$TOTAL_LOG"$LOG\n"
      notify-send 'rclone' "pull from $remote to $local"
    else
      LOG="${RED}✗ 失败${NC}"
      echo -e "$LOG"
      TOTAL_LOG=$TOTAL_LOG"$LOG\n"
      notify-send -u critical 'rclone' "pull from $remote to $local failed"
    fi
    if [ -d "$CONFLICT_DIR" ]; then
      LOG="${RED}Rclone has conflicts in ${CONFLICT_DIR}${NC}"
      echo -e "$LOG"
      TOTAL_LOG=$TOTAL_LOG"$LOG\n"
      notify-send -u critical 'rclone' "Conflicts detected in $CONFLICT_DIR"
    fi
  done
}

rclone_push_all() {
  if [[ -n "$INTERACTIVE" ]]; then
    RCLONE_INTERACTIVE="-i"
  fi

  LOG="${YELLOW}Rclone Push All${NC}\n"
  echo -e "$LOG"
  TOTAL_LOG=$TOTAL_LOG"$LOG"
  for pair in "${RCLONE_PAIR[@]}"; do
    IFS=";" read -r local remote <<<"$pair"
    LOG="${YELLOW}推送: $local → $remote${NC}"
    echo -e "$LOG"
    TOTAL_LOG=$TOTAL_LOG"$LOG"
    if rclone sync "$local" "$remote" $RCLONE_INTERACTIVE --suffix-keep-extension --track-renames --no-update-dir-modtime --no-update-modtime --filter-from "$HOME/.config/rclone/filter-list.txt" --transfers 20 -L --max-age 24h; then
      LOG="${GREEN}✓ 成功${NC}"
      echo -e "$LOG"
      TOTAL_LOG=$TOTAL_LOG"$LOG\n"
      notify-send 'rclone' "push $local to $remote"
    else
      LOG="${RED}✗ 失败${NC}"
      echo -e "$LOG"
      TOTAL_LOG=$TOTAL_LOG"$LOG\n"
      notify-send -u critical 'rclone' "push from $local to $remote failed"
    fi
  done
}

night_reboot() {
  # local POWER=""
  # OPTIND=1
  # getopts :u: opt
  # [[ $opt == "u" ]] && POWER=$OPTARG
  # # POWER=$OPTARG
  # echo "$OPTARG"

  if [ -z "$POWER" ]; then
    echo -e "${YELLOW}[r]eboot/sh[u]tdown/[l]ock/[s]leep/[n]othing ?${NC}"
    read -r -t 5 -s -n 1 POWER
  fi
  case "$POWER" in
  r)
    systemctl reboot
    ;;
  u)
    systemctl poweroff -i
    ;;
  l)
    slock &
    sleep .5
    xset dpms force off
    ;;
  s)
    sleep .5
    xset dpms force off
    ;;
  n | *)
    echo -e "操作已取消"
    ;;
  esac
}

day() {
  rclone_pull_all "$@"
  git_pull_all "$@"
  total_log "$@"
  if [ -d "$CONFLICT_DIR" ]; then
    cd "$CONFLICT_DIR" || return
  fi
}

night() {
  misc
  rclone_push_all "$@"
  git_push_all "$@"
  system_bak "$@"
  total_log "$@"
  night_reboot "$@"
}

misc() {
  vdirsyncer sync zeabur
}

mytest() {
  # getopts :u: opt
  # POWER=$OPTARG
  # night_reboot "$@"
  # night_reboot
  # echo "$(date +%y/%m/%d-%T)"
  echo "end test"
}

main() {
  local command=$1
  shift

  while getopts "iu:" opt; do
    case $opt in
    i) INTERACTIVE="yes" ;;
    u) POWER=$OPTARG ;;
    \?)
      echo "无效选项: -$OPTARG" >&2
      ;;
    esac
  done

  case "$command" in
  d | day | c | coffee)
    day "$@"
    ;;
  n | night | a | alcohol)
    night "$@"
    ;;
  rp)
    rclone_pull_all "$@"
    ;;
  rP)
    rclone_push_all "$@"
    ;;
  gp)
    git_pull_all "$@"
    ;;
  re)
    night_reboot "$@"
    ;;
  gP)
    git_push_all "$@"
    ;;
  t)
    # mytest "$@"
    mytest
    ;;
  # track)
  #   start_tracking "$@"
  #   ;;
  bak)
    system_bak "$@"
    ;;
  config)
    show_config
    ;;
  help | --help | -h)
    show_help
    ;;
  *)
    if [ "$1" = "" ]; then
      show_help
    else
      echo -e "${RED}错误: 未知命令 '$1'${NC}"
      show_help
      exit 1
    fi
    ;;
  esac
}

main "$@"
