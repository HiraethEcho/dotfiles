#!/usr/bin/env bash

## Author  : Aditya Shakya (adi1090x)
## Github  : @adi1090x
#
## Applets : Favorite Applications

# Import Current Theme
theme="~/.config/rofi/themes/quick.rasi"

win_width='500px'
# Theme Elements
prompt='App'
list_col='2'
list_row='4'

# Options
option_1=" web "
cmd_1='librewolf'
option_2=" watt"
cmd_2='watt-toolkit'
option_3=" zotero "
cmd_3='zotero'
option_4=" obsidian "
cmd_4='obsidian'
option_5="󰘑 wechat"
cmd_5='wechat-universal'
option_6=" bluetooth "
cmd_6='st -t task -e bluetui'
option_7=" onedrive "
cmd_7='onedrivegui'
option_8="󰏆 office"
cmd_8='onlyoffice-desktopeditors'
option_9=" file"
cmd_9='pcmanfm ~'
# option_12="󰌪 battery "
# option_13="󰓓 steam"
# option_14=" rss"
# option_5="󰇮 mail "
# option_7=" wifi "
# option_8=" download "
# option_9="󱄠 volume "
# option_10=" nvim "
#    

# Rofi CMD
    # -mesg "$mesg" \
rofi_cmd() {
  rofi -theme-str "listview {columns: $list_col; lines: $list_row;}" \
    -theme-str "window {width: $win_width;}" \
    -theme-str 'textbox-prompt-colon {str: "";}' \
    -dmenu \
    -p "$prompt" \
    -markup-rows \
    -theme ${theme}
}

# Pass variables to rofi dmenu
run_rofi() {
  echo -e "$option_1\n$option_2\n$option_3\n$option_4\n$option_5\n$option_6\n$option_7\n$option_8\n" | rofi_cmd
}

# Actions
chosen="$(run_rofi)"
case ${chosen} in
    $option_1)
    ${cmd_1}
        ;;
    $option_2)
    ${cmd_2}
        ;;
    $option_3)
    ${cmd_3}
        ;;
    $option_4)
    ${cmd_4}
        ;;
    $option_5)
    ${cmd_5}
        ;;
    $option_6)
    ${cmd_6}
        ;;
    $option_7)
    ${cmd_7}
        ;;
    $option_8)
    ${cmd_8}
        ;;
    # $option_9)
    # ${cmd_9}
    #     ;;
esac
