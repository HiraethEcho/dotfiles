#!/usr/bin/env bash

## Author  : Aditya Shakya (adi1090x)
## Github  : @adi1090x
#
## Applets : Favorite Applications

# Import Current Theme
theme="~/.config/rofi/quick.rasi"

win_width='500px'
# Theme Elements
prompt='App'
list_col='2'
list_row='4'

# Options
option_1=" web "
cmd_1='waterfox'
option_2=" watt"
cmd_2='exec watt-toolkit'
option_3=" zotero "
cmd_3='exec zotero'
option_4=" obsidian "
cmd_4='exec obsidian'
option_5="󰘑 wechat"
cmd_5='exec /opt/wechat/wechat'
option_6=" bluetooth "
cmd_6='exec st -c tasks -e bluetui'
option_7=" cherry studio"
cmd_7='cherry-studio'
option_8="󰏆 office"
cmd_8='word'
option_9=" file"
cmd_9='pcmanfm ~'
# option_12="󰌪 battery "
# option_13="󰓓 steam"
# option_14=" rss"
# option_5="󰇮 mail "
# option_7=" wifi "
# option_8=" download "
# option_9="󱄠 volume "
# option_10=" nvim "
#    

# Rofi CMD
# -mesg "$mesg" \
rofi_cmd() {
  rofi -theme-str "listview {columns: $list_col; lines: $list_row;}" \
    -theme-str "window {width: $win_width;}" \
    -theme-str "configuration {show-icons: false;}" \
    -theme-str 'textbox-prompt-colon {str: "";}' \
    -dmenu \
    -p "$prompt" \
    -markup-rows \
    -theme ${theme}
}

# Pass variables to rofi dmenu
run_rofi() {
  echo -e "$option_1\n$option_2\n$option_3\n$option_4\n$option_5\n$option_6\n$option_7\n$option_8" | rofi_cmd
}

# Actions
chosen="$(run_rofi)"
case ${chosen} in
$option_1)
  ${cmd_1}
  ;;
$option_2)
  ${cmd_2}
  ;;
$option_3)
  ${cmd_3}
  ;;
$option_4)
  ${cmd_4}
  ;;
$option_5)
  ${cmd_5}
  ;;
$option_6)
  ${cmd_6}
  ;;
$option_7)
  ${cmd_7}
  ;;
$option_8)
  ${cmd_8}
  ;;
esac
