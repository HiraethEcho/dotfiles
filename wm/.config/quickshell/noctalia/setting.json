        { "id": "Workspace", "labelMode": "name", "hideUnoccupied": false }
      ],
      "center": [
        {
          "id": "SystemMonitor",
          "showCpuTemp": true,
          "showCpuUsage": true,
          "showMemoryUsage": true
        },
        { "id": "ActiveWindow", "showIcon": true, "maxWidth": 145 },
        { "id": "MediaMini", "maxWidth": 145 }
      ],
      "right": [
        { "id": "Tray" },
        { "id": "Battery" },
        { "id": "Volume" },
        { "id": "Clock", "formatHorizontal": "HH:mm MM dd" },
        { "id": "ControlCenter" }
      ]
    }
  },
  "colorSchemes": {
    "darkMode": true
  },
  "ui": {
    "fontDefault": "CodeNewRoman Nerd Font Mono"
  }
